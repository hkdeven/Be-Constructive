        </div>

      </div>
    </section>

    <!-- Featured users -->
    <section>
      <div class="container">
        <header class="section-header">
          <span>The bests</span>
          <h2>Featured users</h2>
          <p>Our weekly selected users with popular shots</p>
        </header>

        <div class="row">
          <!-- User widget -->
          <% @users.last(4).each do |user| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="user-widget-mini">
              <a href="<%= user_path(user) %>">
              <%= image_tag user.localuserimage , alt:'avatar' %></a>
                <h5><a href="<%= user_path(user) %>">
                  <%= user.designer_full_name %></a></h5>
                  <p class="lead"><%= user.designer_username %></p>
                    <small><%= user.designer_added_shots_count %></small>
                  </div>
                </div>
              <% end %>

        </div>
      </div>
