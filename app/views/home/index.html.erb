  <header class="site-header overlay-black no-padding-bottom text-center bg-fixed" style="background-image: url(<%= asset_path('bg-header.jpg') %>">
    <div class="container">
        <h2>Be inspired, be</h2>
        <h1><i><strong>CONSTRUCTIVE</strong></i></h1>
        <br><br>
        <div id="faq-search" class="form-group">
            <i class="ti-search fa fa-hand-o-right"></i>
            <%= form_tag(shots_path, :method => "get", id: "search-form") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Find your inspiration...", class: "form-control", name: "search", type: "text" %>
            <% end %>
        </div>
      <br><br><br>
    </div>
  </header>

