    <!-- Recent section -->
    <section class="bg-white">
      <div class="container">
        <header class="section-header">
          <span>Recent</span>
          <h2>Freshest Uploads</h2>
          <p>Newest content from our members around the world.</p>
        </header>

      <div class="row">
        <!-- Shot -->
        <% @shots.last(9).each do |shot| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="shot shot-small">
            <div class="shot-preview">
              <a class="img" href="<%= shot_path(shot.id) %>"><img src="<%= shot.localshotimage %>"></a>
            </div>

            <div class="shot-info">
              <a href="<%= user_path(shot.user_id) %>"><img src="<%= shot.user.localuserimage %>" alt='avatar'></a>
              <h6><a href="<%= shot_path(shot.id) %>"><%= shot.title %></a></h6>
              <p><time datetime="<%= shot.created_at %>"></time> Added <%= time_ago_in_words(shot.created_at) %> in <a href="<%= user_path(shot.user) %>"><%= shot.user.designer_username %></a></p>
            </div>
          </div>
        </div>
        <% end %>

        <!-- See all button -->
          <div class="col-xs-12 col-sm-4 col-md-offset-4">
            <br><br>
            <a class="btn btn-primary btn-block" href="<%= shots_path %>">See all</a>
